{
    "name": "col",
    "version": "1.0.0",
    "private": true,
    "description": "a remake of the classic Colonization game",
    "main": "index.js",
    "author": "ymdwiseguy",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "https://github.com/ymdwiseguy/colonize.git"
    },
    "dependencies": {
        "ava": "^0.24.0",
        "babel-polyfill": "^6.26.0",
        "css-loader": "^0.28.7",
        "es6-promise": "^4.1.1",
        "express": "^4.16.2",
        "extract-text-webpack-plugin": "^3.0.1",
        "html-webpack-plugin": "^2.30.1",
        "isomorphic-fetch": "^2.2.1",
        "normalize.css": "^7.0.0",
        "prop-types": "^15.5.8",
        "react": "^15.3.2",
        "react-dom": "^15.3.2",
        "react-redux": "^5.0.4",
        "react-router": "^3.0.2",
        "react-router-redux": "^4.0.8",
        "redux": "^3.6.0",
        "redux-thunk": "^2.2.0"
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-es2015": "^6.18.0",
        "babel-preset-react": "^6.16.0",
        "babel-preset-stage-3": "^6.24.1",
        "concurrently": "^3.5.1",
        "node-sass": "^4.5.3",
        "nodemon": "^1.12.1",
        "webpack": "^3.8.1",
        "webpack-dev-server": "^2.9.3"
    },
    "ava": {
        "files": "src/**/*.spec.js",
        "source": "src/**/*.js",
        "concurrency": 5,
        "failFast": true,
        "verbose": true
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-3",
            "react"
        ]
    },
    "scripts": {
        "copy:images": "mkdir -p src/main/resources/static/assets/img/ && cp src/main/resources/img/* src/main/resources/static/assets/img/",
        "dev": "yarn copy:images && yarn webpack-dev-server",
        "api": "node src/main/resources/js/Server",
        "test": "ava",
        "tdd": "ava --watch",
        "start": "yarn dev"
    },
    "workingPaths": {
        "static": "./target/classes/static/assets/"
    }
}
