{
    "name": "col",
    "version": "1.0.0",
    "private": true,
    "description": "a remake of the classic Colonization game",
    "main": "index.js",
    "author": "ymdwiseguy",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "https://github.com/ymdwiseguy/colonize.git"
    },
    "dependencies": {
        "normalize.css": "^4.2.0",
        "prop-types": "^15.5.8",
        "react": "^15.3.2",
        "react-dom": "^15.3.2",
        "react-redux": "^5.0.4",
        "react-router": "^3.0.2",
        "react-router-redux": "^4.0.8",
        "redux": "^3.6.0"
    },
    "devDependencies": {
        "babel-core": "^6.18.2",
        "babel-loader": "^6.2.7",
        "babel-preset-es2015": "^6.18.0",
        "babel-preset-react": "^6.16.0",
        "babel-preset-stage-3": "^6.24.1",
        "concurrently": "^2.2.0",
        "node-sass": "^4.5.2",
        "nodemon": "^1.10.2",
        "webpack": "^1.13.3"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-3",
            "react"
        ]
    },
    "scripts": {
        "clean:static": "rm -rf src/main/resources/static/assets/*",
        "css:dev": "node-sass src/main/resources/sass/layout.scss src/main/resources/static/assets/css/layout.css --output-style expanded --source-map true",
        "css:prod": "node-sass src/main/resources/sass/layout.scss src/main/resources/static/assets/css/layout.css --output-style compressed",
        "js:dev": "webpack -d",
        "js:prod": "webpack -p",
        "copy:images": "mkdir -p src/main/resources/static/assets/img/ && cp src/main/resources/img/* src/main/resources/static/assets/img/",
        "copy:assets": "yarn copy:images",
        "watch:css": "nodemon -e scss -x 'yarn css:dev'",
        "watch:js": "webpack --watch -d",
        "dev": "yarn clean:static && yarn copy:assets && concurrently --kill-others 'yarn watch:css' 'yarn watch:js'",
        "build:dev": "yarn clean:static && yarn copy:assets && yarn css:dev && yarn js:dev",
        "build:prod": "yarn clean:static && yarn copy:assets && yarn css:prod && yarn js:prod",
        "start": "yarn dev"
    },
    "workingPaths": {
        "static": "./target/classes/static/assets/"
    }
}
